@model Circuitos.Models.Volta
@{
    ViewData["Title"] = "Excluir Volta";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir esta volta?</h3>

<dl class="row">
    <dt class="col-sm-2">Carro</dt>
    <dd class="col-sm-10">@Model.Carro.Modelo</dd>

    <dt class="col-sm-2">Circuito</dt>
    <dd class="col-sm-10">@Model.Circuito.Nome</dd>

    <dt class="col-sm-2">Tempo</dt>
    <dd class="col-sm-10">@Model.Tempo</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.DataHora.ToString("g")</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VoltaID" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>